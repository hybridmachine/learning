Cell[BoxData[
 RowBox[{
  RowBox[{"(*", " ", 
   RowBox[{"Find", " ", "the", " ", "Minors", " ", "Matrix"}], " ", "*)"}], 
  "\[IndentingNewLine]", 
  RowBox[{
   RowBox[{
    RowBox[{"m1Sz", " ", "=", " ", "5"}], ";"}], "\[IndentingNewLine]", 
   RowBox[{
    RowBox[{"signMatrixPosVal", " ", "=", " ", "1"}], ";"}], 
   "\[IndentingNewLine]", 
   RowBox[{
    RowBox[{"posList", " ", "=", " ", 
     RowBox[{"Range", "[", "m1Sz", "]"}]}], ";"}], "\[IndentingNewLine]", 
   RowBox[{
    RowBox[{"M1", " ", "=", " ", 
     RowBox[{"RandomReal", "[", 
      RowBox[{"5.0", ",", " ", 
       RowBox[{"{", 
        RowBox[{"m1Sz", ",", "m1Sz"}], "}"}]}], "]"}]}], ";"}], 
   "\[IndentingNewLine]", 
   RowBox[{
    RowBox[{"M1Det", " ", "=", " ", 
     RowBox[{"Det", "[", "M1", "]"}]}], ";"}], "\[IndentingNewLine]", 
   RowBox[{"If", "[", 
    RowBox[{
     RowBox[{
      RowBox[{"Abs", "[", "M1Det", "]"}], " ", ">", " ", "0"}], ",", 
     "\[IndentingNewLine]", 
     RowBox[{"(*", " ", 
      RowBox[{"Create", " ", "a", " ", 
       RowBox[{"0", "'"}], "s", " ", "placeholder", " ", "for", " ", "the", 
       " ", "MinorsMatrix"}], " ", "*)"}], "\[IndentingNewLine]", 
     RowBox[{
      RowBox[{"MinorsMatrix", "  ", "=", " ", 
       RowBox[{"RandomInteger", "[", 
        RowBox[{"0", ",", " ", 
         RowBox[{"{", 
          RowBox[{"m1Sz", ",", " ", "m1Sz"}], "}"}]}], "]"}]}], ";", 
      "\[IndentingNewLine]", 
      RowBox[{"CofactorSignsMatrix", " ", "=", " ", 
       RowBox[{"RandomInteger", "[", 
        RowBox[{"0", ",", " ", 
         RowBox[{"{", 
          RowBox[{"m1Sz", ",", "m1Sz"}], "}"}]}], "]"}]}], ";", 
      "\[IndentingNewLine]", "\[IndentingNewLine]", 
      RowBox[{"(*", " ", 
       RowBox[{
       "Find", " ", "the", " ", "determinant", " ", "of", " ", "the", " ", 
